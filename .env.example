# Folder to watch for new recordings.
# Default: ./watch (inside this project). Set WATCH_FOLDER to override.
# WATCH_FOLDER=C:\\Users\\YOUR_USER\\Videos\\OBS

# Comma-separated file extensions to process
VIDEO_EXTENSIONS=.mp4,.mkv

# Optional: process files already in the folder on startup
PROCESS_EXISTING=false

# Optional: skip YouTube upload and webhook
DRY_RUN=false

# OBS filename timezone (DST aware)
RECORDING_TZ=America/New_York

# Match selection window (in seconds)
# If you record long sessions, increase these.
MATCH_TIME_BEFORE_SEC=3500
MATCH_TIME_AFTER_SEC=3500

# OpenDota
OPENDOTA_PLAYER_ID=115732760

# n8n webhook
N8N_WEBHOOK_URL=https://n8n.jhowl.com/webhook/2a55d28f-0635-46b5-878b-0b64f388d363

# YouTube OAuth2
# Use a Google OAuth "Desktop app" client.
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# Optional (recommended): point to the downloaded client secrets JSON
# (example: client_secret_....apps.googleusercontent.com.json)
YOUTUBE_CLIENT_SECRETS_FILE=

# Used only for token generation helper
YOUTUBE_OAUTH_PORT=8787

YOUTUBE_REFRESH_TOKEN=

# Upload defaults
YOUTUBE_PRIVACY_STATUS=unlisted
YOUTUBE_CATEGORY_ID=20
YOUTUBE_TAGS=dota2,opendota,obs
